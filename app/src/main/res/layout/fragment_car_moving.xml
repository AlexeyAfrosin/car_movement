<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_from"
    app:layoutDescription="@xml/fragment_car_moving_scene">

    <ImageView
        android:id="@+id/iv_taxi"
        android:layout_width="@dimen/iv_taxi_layout_width"
        android:layout_height="@dimen/iv_taxi_layout_height"
        android:layout_gravity="top|start"
        android:background="@android:color/transparent"
        android:contentDescription="@string/iv_taxi_content_description"
        android:src="@drawable/ic_taxi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.motion.widget.MotionLayout>